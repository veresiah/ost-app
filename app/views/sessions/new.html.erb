<h1>Log In</h1>
<%= form_for @user url: login_path, method: :post do |f| %>
    <%= f.label :email_address %><br>
    <%= f.text_field :email_address %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <br><%= f.submit 'Login' %>
<% end %>
<br>
<%= link_to('Log in with Facebook!', '/auth/facebook', method: :post) %>